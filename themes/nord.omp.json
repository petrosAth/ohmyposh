{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title": true,
    "console_title_style": "path",
    "palette": {
        "nordOuterSpace":     "#2e3440",
        "nordCharcoal":       "#3b4252",
        "nordPoliceBlue":     "#434c5e",
        "nordIndependence":   "#4c566a",
        "nordCultured":       "#d8dee9",
        "nordBrightGray":     "#e5e9f0",
        "nordIsabelline":     "#eceff4",
        "nordPewterBlue":     "#8fbcbb",
        "nordDarkSkyBlue":    "#88c0d0",
        "nordDarkPastelBlue": "#81a1c1",
        "nordRackley":        "#5e81ac",
        "nordFuzzyWuzzy":     "#bf616a",
        "nordCopper":         "#d08770",
        "nordGold":           "#ebcb8b",
        "nordLaurelGreen":    "#a3be8c",
        "nordGlossyGrape":    "#b48ead"
    },
	"blocks": [
		{
		"type": "prompt",
		"alignment": "left",
		"segments": [
            {
                "type": "exit",
                "style": "plain",
                "foreground": "p:nordLaurelGreen",
                "properties": {
                    "display_exit_code": false,
                    "always_enabled": true,
                    "error_color": "p:nordFuzzyWuzzy",
                    "prefix": "",
                    "postfix": "┬"
                }
            },
			{
				"type": "session",
				"style": "plain",
				"foreground": "p:nordPewterBlue",
				"properties": {
					"template": "{{.UserName}}",
					"prefix": "<p:nordIndependence>[</>",
					"postfix": ""
				}
			},
			{
				"type": "session",
				"style": "plain",
				"foreground": "p:nordDarkSkyBlue",
				"properties": {
					"template": "{{if .Root}}<p:nordIndependence>|</><p:nordGold></><p:nordIndependence>|</>{{else}}<p:nordIndependence>|</>@<p:nordIndependence>|</>{{end}}",
					"prefix": "",
					"postfix": ""
				}
			},
			{
				"type": "session",
				"style": "plain",
				"foreground": "p:nordPewterBlue",
				"properties": {
					"template": "{{.HostName}}",
					"prefix": "",
					"postfix": "<p:nordIndependence>]</>"
				}
			},
			{
				"type": "path",
				"style": "plain",
				"foreground": "p:nordDarkPastelBlue",
				"properties": {
					"style": "full",
					"prefix": "<p:nordIndependence>[</>",
					"postfix": "<p:nordIndependence>]</>"
				}
			},
			{
				"type": "git",
				"style": "plain",
				"foreground": "p:nordGold",
                "foreground_templates": [
                    "{{ if or (.Working.Changed) (.Staging.Changed) }}p:nordCopper{{ end }}",
                    "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:nordCopper{{ end }}",
                    "{{ if gt .Ahead 0 }}p:nordLaurelGreen{{ end }}",
                    "{{ if gt .Behind 0 }}p:nordFuzzyWuzzy{{ end }}"
                ],
				"properties": {
                    "fetch_status": true,
                    "fetch_stash_count": true,
                    "fetch_upstream_icon": true,
                    "fetch_worktree_count": true,
                    "branch_icon": " ",
					"branch_max_length": 30,
                    "commit_icon": "  ",
                    "rebase_icon": "REBASING ",
                    "cherry_pick_icon": "CHERRY-PICKING ",
                    "revert_icon": "REVERTING ",
                    "no_commits_icon": "−",
                    "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }}<p:nordIndependence>|</><p:nordCopper> </>{{ if gt .Working.Added 0 }}<p:nordLaurelGreen>+{{ .Working.Added }}</>{{ end }}{{ if gt .Working.Deleted 0 }}<p:nordFuzzyWuzzy> -{{ .Working.Deleted }}</>{{ end }}{{ if gt .Working.Modified 0 }}<p:nordCopper> ~{{ .Working.Modified }}</>{{ end }}{{ end }}{{ if .Staging.Changed }}<p:nordIndependence>|</><p:nordLaurelGreen>  {{.Staging.String}}</>{{ end }}{{ if gt .StashCount 0 }}<p:nordIndependence>|</><p:nordGold> {{.StashCount}}</>{{ end }}{{ if gt .WorktreeCount 0 }}{{if .IsWorkTree}}<p:nordIndependence>|</><p:nordGold> {{.WorktreeCount}}</>{{ end }}{{ end }}",
					"prefix": "<p:nordIndependence>[</>",
					"postfix": "<p:nordIndependence>]</>"
				}
			},
            {
                "type": "kubectl",
                "style": "plain",
                "foreground": "#174E9C",
                "properties": {
                    "prefix": "<p:nordIndependence>[</>ﴱ ",
                    "template": "{{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}",
					"postfix": "<p:nordIndependence>]</>"
                }
            }
        ]
		},
		{
		"type": "prompt",
		"alignment": "left",
		"newline": true,
		"segments": [
            {
                "type": "exit",
                "style": "plain",
                "foreground": "p:nordLaurelGreen",
                "properties": {
                    "display_exit_code": false,
                    "always_enabled": true,
                    "error_color": "p:nordFuzzyWuzzy",
                    "prefix": "",
                    "postfix": "└"
                }
            },
			{
				"type": "os",
				"style": "plain",
				"foreground": "p:nordDarkSkyBlue",
				"properties": {
					"windows": " ",
					"macos": " ",
					"linux": " ",
					"alpine": " ",
                    "aosc": " ",
					"arch": " ",
					"centos": " ",
                    "coreos": " ",
					"debian": " ",
                    "devuan": " ",
					"elementary": " ",
                    "fedora": " ",
                    "gentoo": " ",
                    "mageia": " ",
					"manjaro": " ",
                    "mint": " ",
                    "nixos": " ",
					"opensuse": " ",
					"raspbian": " ",
                    "sabayon": " ",
                    "slackware": " ",
					"ubuntu": " ",
					"wsl": "WSL",
					"wsl_separator": " ",
					"prefix": "<p:nordIndependence>[</>",
					"postfix": "<p:nordIndependence>|</>"
				}
			},
			{
				"type": "shell",
				"style": "plain",
				"foreground": "p:nordDarkSkyBlue",
				"properties": {
					"prefix": " ",
					"postfix": "<p:nordIndependence>]</>"
				}
			},
            {
                "type": "executiontime",
                "style": "plain",
                "foreground": "p:nordGold",
                "properties": {
                    "threshold": 2000,
                    "style": "austin",
                    "prefix": "<p:nordIndependence>[</>祥",
					"postfix": "<p:nordIndependence>]</>"
                }
            },
            {
                "type": "exit",
                "style": "plain",
                "foreground": "p:nordLaurelGreen",
                "properties": {
                    "display_exit_code": false,
                    "always_enabled": true,
                    "error_color": "p:nordFuzzyWuzzy",
                    "error_icon": "<p:nordIndependence>[</><p:nordIndependence>]</>",
                    "prefix": "",
                    "postfix": "❯"
                }
            }
        ]
		}
	],
    "final_space": true,
    "osc99": true
}
